<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="20dp"
    android:layout_height="match_parent"
    tools:context="com.example.videodemo.MainActivity">
    <Button
        android:id="@+id/btn_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="switch"
        />
    <SurfaceView
        android:layout_below="@+id/btn_switch_camera"
        android:id="@+id/camera_surfaceView"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/camera_surfaceView"
        android:id="@+id/camera_image_show"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <SurfaceView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/camera_image_show"
        android:id="@+id/camera_surfaceView2"
        android:layout_width="100dp"
        android:layout_height="100dp" />
</RelativeLayout>
