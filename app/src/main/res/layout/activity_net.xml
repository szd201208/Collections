<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_net"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.videodemo.activity.NetActivity">

    <Button
        android:id="@+id/okhttp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkHttp请求" />

    <Button
        android:id="@+id/retrofit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/okhttp_btn"
        android:layout_marginTop="10dp"
        android:text="Retrofit请求" />

    <Button
        android:id="@+id/rxjava_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retrofit_btn"
        android:layout_marginTop="10dp"
        android:text="Rxjava请求" />

    <Button
        android:id="@+id/mix_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rxjava_btn"
        android:layout_marginTop="10dp"
        android:text="尝试混合请求" />

    <Button
        android:id="@+id/get_noparams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mix_btn"
        android:layout_marginTop="10dp"
        android:text="GET无参" />

    <Button
        android:id="@+id/get_hasparams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_noparams"
        android:layout_marginTop="10dp"
        android:text="GET有参" />

    <Button
        android:id="@+id/post_noparams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_hasparams"
        android:layout_marginTop="10dp"
        android:text="POST无参" />

    <Button
        android:id="@+id/post_hasparams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_noparams"
        android:layout_marginTop="10dp"
        android:text="POST有参" />

    <TextView
        android:id="@+id/result"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>
